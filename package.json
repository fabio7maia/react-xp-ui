	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "node scripts/pre-build.js && tsc --project tsconfig.prod.json && node scripts/copy-files.js",
		"start:css": "npx tailwindcss -i ./src/tailwindcss/main.css -o ./src/assets/main.css --watch",
		"start:storybook": "start-storybook -p 6006",
		"start": "concurrently \"yarn run start:css\" \"yarn run start:storybook\"",
		"storybook:build": "build-storybook -s public",
		"storybook:serve": "yarn run storybook:build && npx http-server ./storybook-static/",
		"lint:errors": "eslint --quiet src/**/*.{ts,tsx}",
		"lint:fix": "eslint --fix src/**/*.{ts,tsx}",
		"lint:css": "stylelint ./src/**/*.{ts,tsx}",
		"prettier-format-all": "prettier --write src/**/*.{json,ts,tsx}",
		"lint:all": "yarn run lint:errors && yarn run spell:check && yarn run lint:css",
		"spell:check": "cspell src/**/*.{ts,tsx}",
		"jest": "jest --coverage --verbose --color",
		"test": "node scripts/test.js \"--watchAll=false\" \"--forceExit\"",
		"test:coverage": "node scripts/test.js \"--coverage\" \"--watchAll=false\" \"--silent\" \"--forceExit\"",
		"prepare": "husky install",
		"git:pre-commit": "lint-staged",
		"git:pre-push": "yarn run build",
		"docs:build": "typedoc",
		"docs:serve": "yarn run docs:build && npx serve docs",
		"build-storybook": "build-storybook"
	},
	"keywords": [
		"react",
		"ui",
		"components",
		"tailwindcss",
		"daisyui"
	],
	"peerDependencies": {
		"daisyui": "^2.19.0",
		"react": "^17.0.0 || ^18.0.0",
		"react-dom": "^17.0.0 || ^18.0.0",
		"tailwindcss": "^3.1.6"
	},
